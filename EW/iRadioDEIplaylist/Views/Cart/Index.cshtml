@model iRadioDEIplaylist.Models.Cart

@{
    ViewBag.Title = "Index";
}

<h2>Cart</h2>

<p>@ViewBag.Message</p>

@using (Html.BeginForm()) {
<p>
    <input type="submit" value="Save" />
</p>
<table>
    <tr>
        <th>
            MusicName
        </th>
        <th>
            MusicDuration (seconds)
        </th>
        <th>
            GenreName
        </th>
        <th>
            AlbumName
        </th>
        <th>
            ArtistName
        </th>
    </tr>
@foreach (var item in Model.Musics.ToList()) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MusicName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MusicDuration)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre.GenreName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Album.AlbumName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Album.Artist.ArtistName)
        </td>
    </tr>
}
</table>
}