@model iRadioDEIplaylist.Models.NewSound

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>NewSound</legend>

        @Html.HiddenFor(model => model.NewSoundId)

        <div class="editor-label">
            @Html.LabelFor(model => model.NewSoundDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NewSoundDate)
            @Html.ValidationMessageFor(model => model.NewSoundDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PlaylistId, "Playlist")
        </div>
        <div class="editor-field">
            @Html.DropDownList("PlaylistId", String.Empty)
            @Html.ValidationMessageFor(model => model.PlaylistId)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
